<?xml version="1.0" encoding="UTF-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="2dp"
    app:cardCornerRadius="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="7"
        android:orientation="horizontal"
        android:paddingVertical="10dp"
        >

<de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/imgAlumniProfile"
    android:layout_width="0dp"
    android:layout_height="80dp"
    android:src="@drawable/human_image"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_weight="1.5"
    />
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="4"
           android:orientation="vertical"
           android:layout_marginTop="10dp"
           >
           <TextView
               android:id="@+id/txtRecyclerRowItem"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"

               android:text="List Item "
               android:textColor="#000000"
               android:textSize="20sp"
               android:textStyle="bold"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="20dp"
               android:layout_weight="4"
               android:fontFamily="@font/no_to_sans_bold"
               android:layout_toRightOf="@id/imgAlumniProfile"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Batch:2020"
               android:layout_marginLeft="20dp"
               android:fontFamily="@font/no_to_sans_bold"
               />
       </LinearLayout>
<Button
    android:id="@+id/btnStatus"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:background="@drawable/smooth_corner_shape"
    android:layout_weight="1.5"
    android:layout_gravity="center"
    android:backgroundTint="@color/appPrimary"
   android:text="Placed"
    android:textColor="@color/white"
    android:textAllCaps="false"
    android:fontFamily="@font/no_to_sans_bold"
    android:layout_marginRight="10dp"
    />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/img_naviagte_next"
            android:layout_gravity="center"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>